<UserControl x:Class="Sheet.SheetControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="540" d:DesignWidth="720"
             PreviewKeyDown="UserControl_PreviewKeyDown"
             Focusable="True" FocusVisualStyle="{x:Null}">
    <Canvas x:Name="Workspace"
            PreviewMouseWheel="Workspace_PreviewMouseWheel"
            PreviewMouseDown="Workspace_PreviewMouseDown"
            Width="720" Height="540"
            Background="Transparent"
            ClipToBounds="False"
            RenderTransformOrigin="0.0,0.0"
            SnapsToDevicePixels="True">
        <Canvas.RenderTransform>
            <TransformGroup>
                <ScaleTransform x:Name="zoom" ScaleX="1" ScaleY="1"/>
                <SkewTransform/>
                <RotateTransform/>
                <TranslateTransform x:Name="pan" X="0" Y="0"/>
            </TransformGroup>
        </Canvas.RenderTransform>
        <Canvas x:Name="Back" Background="Transparent" 
                Width="720" Height="540">
        </Canvas>
        <Canvas x:Name="Sheet" Background="Transparent" 
                Width="720" Height="540">
        </Canvas>
        <Canvas x:Name="Overlay" Background="Transparent" 
                Width="720" Height="540"
                PreviewMouseLeftButtonDown="Overlay_PreviewMouseLeftButtonDown"
                PreviewMouseLeftButtonUp="Overlay_PreviewMouseLeftButtonUp"
                PreviewMouseMove="Overlay_PreviewMouseMove"
                PreviewMouseRightButtonDown="Overlay_PreviewMouseRightButtonDown" 
                PreviewMouseRightButtonUp="Overlay_PreviewMouseRightButtonUp">
        </Canvas>
    </Canvas>
</UserControl>
