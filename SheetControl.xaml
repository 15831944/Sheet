<UserControl x:Class="Sheet.SheetControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="540">
    <Grid x:Name="Workspace"
          PreviewMouseWheel="Workspace_PreviewMouseWheel"
          PreviewMouseDown="Workspace_PreviewMouseDown"
          Background="Transparent"
          ClipToBounds="True">
        <Canvas x:Name="Sheet" Background="Transparent" 
                Width="720" Height="540"
                SnapsToDevicePixels="True"
                PreviewMouseLeftButtonDown="Sheet_PreviewMouseLeftButtonDown"
                PreviewMouseLeftButtonUp="Sheet_PreviewMouseLeftButtonUp"
                PreviewMouseMove="Sheet_PreviewMouseMove"
                PreviewMouseRightButtonDown="Sheet_PreviewMouseRightButtonDown" 
                PreviewMouseRightButtonUp="Sheet_PreviewMouseRightButtonUp"
                RenderTransformOrigin="0.5,0.5">
            <Canvas.RenderTransform>
                <TransformGroup>
                    <ScaleTransform x:Name="zoom" ScaleX="1" ScaleY="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform x:Name="pan" X="0" Y="0"/>
                </TransformGroup>
            </Canvas.RenderTransform>
        </Canvas>
    </Grid>
</UserControl>
