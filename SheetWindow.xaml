<Window x:Class="Sheet.SheetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Sheet"
        Title="Sheet" Height="820" Width="1230"
        WindowStartupLocation="CenterScreen" WindowState="Normal"
        PreviewKeyDown="Window_PreviewKeyDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <local:SheetControl x:Name="Sheet" ZoomIndex="9" PanX="0" PanY="0" ClipToBounds="False" Grid.Column="0"/>
        <StackPanel x:Name="Help" Visibility="Collapsed" 
                    VerticalAlignment="Center" HorizontalAlignment="Right" 
                    SnapsToDevicePixels="True" 
                    Margin="6" Grid.Column="0"
                    Background="WhiteSmoke">
            <Grid Margin="10,10,10,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="File" TextDecorations="Underline" FontWeight="Medium" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Margin="2"/>
                <TextBlock Text="Open" Grid.Column="0" Grid.Row="1" Margin="2"/>
                <TextBlock Text="Ctrl+O" Grid.Column="1" Grid.Row="1" Margin="8,2,2,2"/>
                <TextBlock Text="Save" Grid.Column="0" Grid.Row="2" Margin="2"/>
                <TextBlock Text="Ctrl+S" Grid.Column="1" Grid.Row="2" Margin="8,2,2,2"/>
            </Grid>
            <Grid Margin="10,2,10,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Edit" TextDecorations="Underline" FontWeight="Medium" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Margin="2"/>
                <TextBlock Text="Undo" Grid.Column="0" Grid.Row="1" Margin="2"/>
                <TextBlock Text="Ctrl+Z" Grid.Column="1" Grid.Row="1" Margin="8,2,2,2"/>
                <TextBlock Text="Redo" Grid.Column="0" Grid.Row="2" Margin="2"/>
                <TextBlock Text="Ctrl+Y" Grid.Column="1" Grid.Row="2" Margin="8,2,2,2"/>
                <TextBlock Text="Cut" Grid.Column="0" Grid.Row="3" Margin="2"/>
                <TextBlock Text="Ctrl+X" Grid.Column="1" Grid.Row="3" Margin="8,2,2,2"/>
                <TextBlock Text="Copy" Grid.Column="0" Grid.Row="4" Margin="2"/>
                <TextBlock Text="Ctrl+C" Grid.Column="1" Grid.Row="4" Margin="8,2,2,2"/>
                <TextBlock Text="Paste" Grid.Column="0" Grid.Row="5" Margin="2"/>
                <TextBlock Text="Ctrl+V" Grid.Column="1" Grid.Row="5" Margin="8,2,2,2"/>
                <TextBlock Text="Delete" Grid.Column="0" Grid.Row="6" Margin="2"/>
                <TextBlock Text="Del" Grid.Column="1" Grid.Row="6" Margin="8,2,2,2"/>
                <TextBlock Text="Reset" Grid.Column="0" Grid.Row="7" Margin="2"/>
                <TextBlock Text="Ctrl+Del" Grid.Column="1" Grid.Row="7" Margin="8,2,2,2"/>
                <TextBlock Text="Select All" Grid.Column="0" Grid.Row="8" Margin="2"/>
                <TextBlock Text="Ctrl+A" Grid.Column="1" Grid.Row="8" Margin="8,2,2,2"/>
                <TextBlock Text="Create Block" Grid.Column="0" Grid.Row="9" Margin="2"/>
                <TextBlock Text="B" Grid.Column="1" Grid.Row="9" Margin="8,2,2,2"/>
                <TextBlock Text="Break Block" Grid.Column="0" Grid.Row="10" Margin="2"/>
                <TextBlock Text="Ctrl+B" Grid.Column="1" Grid.Row="10" Margin="8,2,2,2"/>
                <TextBlock Text="Move Up" Grid.Column="0" Grid.Row="11" Margin="2"/>
                <TextBlock Text="Up" Grid.Column="1" Grid.Row="11" Margin="8,2,2,2"/>
                <TextBlock Text="Move Down" Grid.Column="0" Grid.Row="12" Margin="2"/>
                <TextBlock Text="Down" Grid.Column="1" Grid.Row="12" Margin="8,2,2,2"/>
                <TextBlock Text="Move Left" Grid.Column="0" Grid.Row="13" Margin="2"/>
                <TextBlock Text="Left" Grid.Column="1" Grid.Row="13" Margin="8,2,2,2"/>
                <TextBlock Text="Move Right" Grid.Column="0" Grid.Row="14" Margin="2"/>
                <TextBlock Text="Right" Grid.Column="1" Grid.Row="14" Margin="8,2,2,2"/>
            </Grid>
            <Grid Margin="10,2,10,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Mode" TextDecorations="Underline" FontWeight="Medium" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Margin="2"/>
                <TextBlock Text="None" Grid.Column="0" Grid.Row="1" Margin="2"/>
                <TextBlock Text="N" Grid.Column="1" Grid.Row="1" Margin="8,2,2,2"/>
                <TextBlock Text="Selection" Grid.Column="0" Grid.Row="2" Margin="2"/>
                <TextBlock Text="S" Grid.Column="1" Grid.Row="2" Margin="8,2,2,2"/>
                <TextBlock Text="Line" Grid.Column="0" Grid.Row="3" Margin="2"/>
                <TextBlock Text="L" Grid.Column="1" Grid.Row="3" Margin="8,2,2,2"/>
                <TextBlock Text="Rectangle" Grid.Column="0" Grid.Row="4" Margin="2"/>
                <TextBlock Text="R" Grid.Column="1" Grid.Row="4" Margin="8,2,2,2"/>
                <TextBlock Text="Text" Grid.Column="0" Grid.Row="5" Margin="2"/>
                <TextBlock Text="T" Grid.Column="1" Grid.Row="5" Margin="8,2,2,2"/>
                <TextBlock Text="Signal" Grid.Column="0" Grid.Row="6" Margin="2"/>
                <TextBlock Text="I" Grid.Column="1" Grid.Row="6" Margin="8,2,2,2"/>
                <TextBlock Text="AndGate" Grid.Column="0" Grid.Row="7" Margin="2"/>
                <TextBlock Text="A" Grid.Column="1" Grid.Row="7" Margin="8,2,2,2"/>
                <TextBlock Text="OrGate" Grid.Column="0" Grid.Row="8" Margin="2"/>
                <TextBlock Text="O" Grid.Column="1" Grid.Row="8" Margin="8,2,2,2"/>
            </Grid>
            <Grid Margin="10,2,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Help" TextDecorations="Underline" FontWeight="Medium" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Margin="2"/>
                <TextBlock Text="Show Help" Grid.Column="0" Grid.Row="1" Margin="2"/>
                <TextBlock Text="H" Grid.Column="1" Grid.Row="1" Margin="8,2,2,2"/>
            </Grid>
        </StackPanel>
        <Grid x:Name="TextGrid" Visibility="Collapsed" 
              VerticalAlignment="Center" 
              SnapsToDevicePixels="True" 
              Width="330" 
              Background="WhiteSmoke">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Border BorderBrush="DarkGray" BorderThickness="1" Grid.RowSpan="2"/>
            <Grid VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="4,6,4,0" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="TextLabel" Text="" VerticalAlignment="Center" Margin="4" Grid.Column="0"/>
                <TextBox x:Name="TextValue" Text="" VerticalAlignment="Center" Margin="4" Grid.Column="1"/>
            </Grid>
            <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Margin="4,0,4,6" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="OK" Content="OK" Width="60" VerticalAlignment="Center" Padding="2" Margin="4" Grid.Column="0"/>
                <Button x:Name="Cancel" Content="Cancel" Width="60" VerticalAlignment="Center" Padding="2" Margin="4" Grid.Column="1"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
