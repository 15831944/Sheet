<Window x:Class="Sheet.SheetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Sheet"
        Title="Sheet" 
        Height="820" 
        Width="1230"
        WindowStartupLocation="CenterScreen" 
        WindowState="Maximized"
        SnapsToDevicePixels="True"
        PreviewKeyDown="Window_PreviewKeyDown">
    <Grid>
        <local:SheetControl x:Name="Sheet" ZoomIndex="9" PanX="0" PanY="0"/>
        <ListBox x:Name="Library" 
                 Width="150" 
                 Height="Auto"
                 Margin="6" 
                 Padding="0"
                 Background="WhiteSmoke" 
                 BorderBrush="{x:Null}" 
                 BorderThickness="0" 
                 VerticalAlignment="Center" 
                 HorizontalAlignment="Left" 
                 HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" Padding="6" Margin="2"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <local:HelpControl x:Name="Help" 
                           Visibility="Visible" 
                           Margin="6" 
                           Background="WhiteSmoke" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Right"/>
        <Grid x:Name="TextGrid" 
              Visibility="Collapsed" 
              Width="330" 
              Background="WhiteSmoke"
              VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Border BorderBrush="DarkGray" BorderThickness="1" Grid.RowSpan="2"/>
            <Grid VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="4,6,4,0" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="TextLabel" Text="" VerticalAlignment="Center" Margin="4" Grid.Column="0"/>
                <TextBox x:Name="TextValue" Text="" VerticalAlignment="Center" Margin="4" Grid.Column="1"/>
            </Grid>
            <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Margin="4,0,4,6" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="OK" Content="OK" Background="WhiteSmoke" Width="60" VerticalAlignment="Center" Padding="2" Margin="4" Grid.Column="0"/>
                <Button x:Name="Cancel" Content="Cancel" Background="WhiteSmoke" Width="60" VerticalAlignment="Center" Padding="2" Margin="4" Grid.Column="1"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
